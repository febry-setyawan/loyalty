<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- Suppress common false positives in CI/CD environments -->
    
    <!-- Spring Boot related false positives -->
    <suppress>
        <notes><![CDATA[
        Spring Boot framework components - false positive CVEs that don't apply to our usage
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework.*$</packageUrl>
        <cve>CVE-2016-1000027</cve>
    </suppress>
    
    <!-- Test dependencies -->
    <suppress>
        <notes><![CDATA[
        Test-only dependencies should not cause build failures
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/.*$</packageUrl>
        <scope>test</scope>
    </suppress>
    
    <!-- Jackson false positives -->
    <suppress>
        <notes><![CDATA[
        Jackson library false positives that don't affect our usage patterns
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.fasterxml\.jackson.*$</packageUrl>
        <cve>CVE-2020-25649</cve>
    </suppress>
</suppressions>