# Loyalty System - Environment Variables Template
# Copy this file to .env for local development customization

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=loyalty
DB_USERNAME=loyalty_user
DB_PASSWORD=loyalty_pass

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# KAFKA CONFIGURATION
# =============================================================================
KAFKA_SERVERS=kafka:29092

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=development
LOG_LEVEL=INFO

# Service Ports (for external access)
USER_SERVICE_PORT=8080
POINT_SERVICE_PORT=8081
REWARDS_SERVICE_PORT=8082
ADMIN_SERVICE_PORT=8083

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================
KONG_PROXY_PORT=8000
KONG_ADMIN_PORT=8001

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'true' to enable debug mode for services
DEBUG_MODE=false

# Set to 'true' to enable SQL logging
SHOW_SQL=false

# Set to 'true' to enable detailed health check information
DETAILED_HEALTH=true